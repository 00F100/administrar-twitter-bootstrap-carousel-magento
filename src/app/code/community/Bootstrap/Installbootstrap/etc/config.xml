<?xml version="1.0"?>
<config>
    <modules>
        <Bootstrap_Installbootstrap>
            <version>1.0.0</version>
        </Bootstrap_Installbootstrap>
    </modules>
    <frontend>
        <routers>
            <installbootstrap>
                <use>standard</use>
                <args>
                    <module>Bootstrap_Installbootstrap</module>
                    <frontName>installbootstrap</frontName>
                </args>
            </installbootstrap>
        </routers>
        <layout>
            <updates>
                <installbootstrap>
                    <file>installbootstrap.xml</file>
                </installbootstrap>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <installbootstrap>
                <use>admin</use>
                <args>
                    <module>Bootstrap_Installbootstrap</module>
                    <frontName>installbootstrap</frontName>
                </args>
            </installbootstrap>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <bootstrap module="installbootstrap">
                <title>Twitter Bootstrap</title>
                <sort_order>11</sort_order>               
                <children>
                    <items module="installbootstrap">
                        <title>Instalar Twitter Bootstrap</title>
                        <sort_order>0</sort_order>
                        <action>installbootstrap/adminhtml_installbootstrap</action>
                    </items>
                </children>
            </bootstrap>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Bootstrap_Installbootstrap>
                            <title>Installbootstrap Module</title>
                            <sort_order>10</sort_order>
                        </Bootstrap_Installbootstrap>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <installbootstrap>
                    <file>installbootstrap.xml</file>
                </installbootstrap>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <installbootstrap>
                <class>Bootstrap_Installbootstrap_Model</class>
                <resourceModel>installbootstrap_mysql4</resourceModel>
            </installbootstrap>
        </models>
        <blocks>
            <installbootstrap>
                <class>Bootstrap_Installbootstrap_Block</class>
            </installbootstrap>
        </blocks>
        <helpers>
            <installbootstrap>
                <class>Bootstrap_Installbootstrap_Helper</class>
            </installbootstrap>
        </helpers>
    </global>
</config>