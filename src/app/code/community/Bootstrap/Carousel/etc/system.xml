<?xml version="1.0"?>
<config>
	<tabs>
		<bootstrap translate="label" module="carousel">
			<label>Twitter Bootstrap</label>
			<sort_order>11</sort_order>
		</bootstrap>
	</tabs>
	<sections>
		<carousel translate="label" module="carousel">
			<label>Carousel</label>
			<tab>bootstrap</tab>
			<sort_order>130</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<carousel_config translate="label">
					<label>Carousel Config</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label comment">
							<label>Habilitado: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</enabled>
                        <animation translate="label">
                            <label>Tipo de animação: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>
								carousel/config_mode
							</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </animation>
                        <speed translate="label">
                            <label>Tempo para trocar a imagem: </label>
                            <frontend_type>text</frontend_type>
							<comment>Set the speed of the slideshow cycling, in milliseconds</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </speed>
						<interval>
							<label>Velocidade animação: </label>
							<frontend_type>text</frontend_type>
							<comment>Set the speed of animations, in milliseconds</comment>
							<sort_order>32</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</interval>
						<qty_item translate="label">
                            <label>Quantidade de banners: </label>
                            <frontend_type>text</frontend_type>
							<comment>Number item display</comment>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </qty_item>
						<description translate="label comment">
							<label>Exibit titulo:</label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>37</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</description>	
						<next_back translate="label">
							<label>Exibir botões anterior/próximo: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</next_back>
						<nav_ctrl translate="label">
							<label>Exibir controle de navegação: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>42</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</nav_ctrl>
					</fields>
				</carousel_config>						
			</groups>
		</carousel>
	</sections>
</config>


